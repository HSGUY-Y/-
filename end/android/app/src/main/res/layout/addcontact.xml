<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:clickable="true"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/back_btn" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="140dp"
            android:gravity="left|center"
            android:text="添加好友"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DD2C00"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Error:网络连接出错—请检查网络"
            android:textColor="#FFFAFA"
            app:fontFamily="sans-serif-black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/personline">

            <EditText
                android:id="@+id/searchtext"
                android:layout_width="350dp"
                android:layout_height="50dp"

                android:ems="11"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:paddingLeft="10dp"
                android:selectAllOnFocus="true"
                android:text="搜索"
                android:textColor="#FFFFFF"
                android:textSize="14dp"
                app:fontFamily="sans-serif-black" />

            <ImageView
                android:id="@+id/search"
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/searchbtn" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/layout_btn"
        android:clickable="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/headshot"
            android:layout_width="80dp"
            android:layout_height="70dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/headshot_man" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"

            android:paddingLeft="3dp"
            android:paddingTop="5dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/nickname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="尼尔叔叔"
                android:textColor="#FFFFFF"
                android:textSize="20dp"
                app:fontFamily="sans-serif-black" />

            <TextView
                android:id="@+id/account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="left|center"
                android:text="TikTalkID"
                android:textColor="#FFAB00"
                android:textSize="15dp"
                app:fontFamily="sans-serif-black" />
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:id="@+id/addmsglist"
        android:layout_width="match_parent"
        android:layout_height="469dp"
        android:layout_marginTop="20dp">

    </ListView>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"

        android:layout_gravity="start"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/back_btn"
            android:clickable="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="#FFAB00"
            android:paddingRight="40dp"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black"
            android:text="尼尔叔叔" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/conn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#DD2C00"
            android:gravity="center"
            android:paddingTop="5dp"
            android:text="Error:网络连接出错—请检查网络"
            android:textColor="#FFFAFA"
            app:fontFamily="sans-serif-black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/headshot"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                app:srcCompat="@drawable/headshot_man" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/personline"
                android:orientation="vertical"
                android:paddingLeft="8dp"
                android:paddingTop="22dp"
                android:paddingRight="25dp">

                <TextView
                    android:id="@+id/nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="尼尔叔叔"
                    android:textColor="#FFFFFF"
                    android:textSize="20dp"
                    app:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/account"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="TextView"
                    android:textColor="#DD2C00"
                    android:textSize="15dp"
                    app:fontFamily="sans-serif-black" />

                <TextView
                    android:id="@+id/sign"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center"
                    android:text="TextView"
                    android:textColor="#FFAB00"
                    android:textSize="12dp"
                    app:fontFamily="sans-serif-medium" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/addPerson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:background="@drawable/layout_btn"
        android:clickable="true">
        <ImageView
            android:id="@+id/AddIcon"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:paddingTop="3dp"
            android:paddingRight="3dp"
            android:paddingLeft="3dp"
            android:paddingBottom="3dp"
            app:srcCompat="@drawable/adduser" />

        <TextView
            android:id="@+id/AddText"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="添加好友"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>


</LinearLayout>
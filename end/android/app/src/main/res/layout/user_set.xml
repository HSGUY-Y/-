<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/back_btn"
            android:clickable="true"/>

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="120dp"
            android:gravity="left|center"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black"
            android:text="用户设置" />
    </LinearLayout>
    <TextView
        android:id="@+id/conn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DD2C00"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Error:网络连接出错—请检查网络"
        android:textColor="#FFFAFA"
        app:fontFamily="sans-serif-black" />

    <LinearLayout
        android:id="@+id/changehs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/layout_btn"
        android:clickable="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/HSText"
            android:layout_width="308dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:text="大头贴"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />

        <ImageView
            android:id="@+id/headshot"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            app:srcCompat="@drawable/headshot_man" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/changeName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/nickText"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:text="昵称"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:gravity="right|center"
            android:background="@drawable/personline"
            android:ems="11"
            android:inputType="textPersonName"
            android:text="尼尔叔叔"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
            app:fontFamily="sans-serif-black"/>
        <Button
            android:id="@+id/sure"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:text="确认" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/changeSign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">
        <TextView
            android:id="@+id/signText"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:gravity="left|center"
            android:text="签名"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
        <EditText
            android:id="@+id/sign"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:paddingRight="20dp"
            android:gravity="right|center"
            android:background="@drawable/personline"
            android:ems="11"
            android:inputType="textPersonName"
            android:text="textview"
            android:textSize="18dp"
            android:textColor="#FFFFFF"
            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
            app:fontFamily="sans-serif-black"/>
        <Button
            android:id="@+id/sure1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/btn"
            android:text="确认" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/changePhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/personline">
        <ImageView
            android:id="@+id/phoneIcon"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/phone" />
        <TextView
            android:id="@+id/phoneText"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="手机号"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:gravity="right|center"
            android:text="13403010880"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/changeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/personline">
        <ImageView
            android:id="@+id/emailIcon"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/email" />
        <TextView
            android:id="@+id/emailText"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="邮箱"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:gravity="right|center"
            android:text="vanstxt@163.com"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/changePS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        android:background="@drawable/layout_btn"
        android:clickable="true">
        <ImageView
            android:id="@+id/PSIcon"
            android:layout_width="40dp"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            app:srcCompat="@drawable/password" />
        <TextView
            android:id="@+id/pstext"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:text="密码"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
        <TextView
            android:id="@+id/password"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:gravity="right|center"
            android:text="********"
            android:textColor="#FFAB00"
            android:textSize="18dp"
            app:fontFamily="sans-serif-black" />
    </LinearLayout>
</LinearLayout>